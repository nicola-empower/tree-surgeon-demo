---
import JobManager from "../../components/admin/JobManager";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Job Management - Royal Oak">
    <div class="min-h-screen bg-gray-50 pt-24 pb-12">
        <div class="max-w-7xl mx-auto px-4 md:px-12 mb-8 flex justify-end">
            <a
                href="/admin/dashboard"
                class="inline-flex items-center gap-2 text-sm
font-semibold text-gray-600 hover:text-gray-900 bg-white px-3 py-1 rounded-lg
border border-gray-200"
            >
                &larr; Back to Dashboard
            </a>
        </div>
        <main class="max-w-7xl mx-auto px-4">
            <div
                class="flex flex-col md:flex-row
justify-between items-center mb-10 gap-4"
            >
                <div>
                    <h1 class="text-3xl
font-extrabold text-gray-900">
                        Job Board
                    </h1>
                    <p class="text-gray-500 mt-2">
                        Manage your schedule and task status.
                    </p>
                </div>
            </div>
            <JobManager client:load />
        </main>
    </div>
</Layout>
