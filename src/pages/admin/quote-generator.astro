                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    // Find all buttons with this data-tab (for the one in the other tab)
                    document.querySelectorAll(`.tab-button[data-tab="${tabId}"]`).forEach(b => b.classList.add('active'));

                    // Update content
                    tabContents.forEach(content => {
                        content.classList.toggle('active', content.id === `${tabId}-tab`);
                    });
                });
            });

            // --- Quote Generator Logic ---
            const quoteCheckboxes = document.querySelectorAll('.service-checkbox');
            const quoteTotalEl = document.getElementById('quote-total');
            const proposalPriceInput = document.getElementById('project-price');
            const proposalScopeTextarea = document.getElementById('project-scope');

            function updateQuoteTotal() {
                let total = 0;
                let scopeItems = [];
                quoteCheckboxes.forEach(checkbox => {
                    if (checkbox.checked) {
                        total += parseFloat(checkbox.dataset.price);
                        scopeItems.push(`- ${checkbox.dataset.label}`); // Get label text
                    }
                });
                
                // 1. Update quote total
                quoteTotalEl.textContent = `£${total.toLocaleString('en-GB', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`;
                
                // 2. Update proposal form fields
                proposalPriceInput.value = total.toFixed(2);
                proposalScopeTextarea.value = scopeItems.join('\n');
            }
            quoteCheckboxes.forEach(checkbox => checkbox.addEventListener('change', updateQuoteTotal));
            
            // Run on load to sync any pre-checked boxes
            updateQuoteTotal();


            // --- Proposal Builder Logic ---
            const proposalForm = document.getElementById('proposal-form');
            const proposalModal = document.getElementById('proposal-modal');
            const followUpModal = document.getElementById('follow-up-modal');

            proposalForm.addEventListener('submit', function(e) {
                e.preventDefault();

                // 1. Get data from form
                const clientName = document.getElementById('client-name').value;
                const clientCompany = document.getElementById('client-company').value;
                const clientAddress = document.getElementById('client-address').value;
                const senderName = document.getElementById('sender-name').value;
                const senderCompany = document.getElementById('sender-company').value;
                const senderAddress = document.getElementById('sender-address').value;
                const projectName = document.getElementById('project-name').value;
                const projectScope = document.getElementById('project-scope').value;
                const projectPrice = parseFloat(document.getElementById('project-price').value) || 0;
                
                let startDateValue = document.getElementById('start-date').value;
                let startDate = "TBC";
                if (startDateValue) {
                    // Format date as "12 June 2026"
                    startDate = new Date(startDateValue).toLocaleDateString('en-GB', {
                        day: 'numeric', month: 'long', year: 'numeric'
                    });
                }
                
                // 2. Inject data into proposal modal
                document.getElementById('prop-client-company').textContent = clientCompany;
                document.getElementById('prop-client-company-2').textContent = clientCompany;
                document.getElementById('prop-client-name').textContent = clientName;
                document.getElementById('prop-client-address').textContent = clientAddress.replace(/\n/g, '\n');
                
                document.getElementById('prop-sender-company').textContent = senderCompany;
                document.getElementById('prop-sender-company-2').textContent = senderCompany;
                document.getElementById('prop-sender-address').textContent = senderAddress.replace(/\n/g, '\n');

                document.getElementById('prop-project-name').textContent = projectName;
                document.getElementById('prop-start-date').textContent = startDate;
                
                // Format scope to preserve line breaks and make it a list
                const scopeHtml = projectScope.split('\n')
                                      .map(item => `<li>${item.replace(/^- /, '')}</li>`)
                                      .join('');
                document.getElementById('prop-project-scope').innerHTML = `<ul>${scopeHtml}</ul>`;

                // Format pricing
                document.getElementById('prop-project-price').textContent = `£${projectPrice.toLocaleString('en-GB', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`;
                document.getElementById('prop-deposit').textContent = (projectPrice / 2).toLocaleString('en-GB', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
                
                // Inject client name into follow-up modal
                document.getElementById('follow-up-client-name').textContent = clientName;

                // 3. Show modal
                proposalModal.style.display = 'flex';
                // Reset follow-up modal confirmation
                document.getElementById('calendar-confirmation').style.display = 'none';
            });

            // --- Modal Close Logic ---
            proposalModal.querySelectorAll('.modal-close, .modal-overlay').forEach(el => {
                el.addEventListener('click', () => {
                    proposalModal.style.display = 'none';
                });
            });

            // --- Workflow Logic (Modal 1 -> Modal 2) ---
            const sendProposalBtn = document.getElementById('send-proposal-btn');
            
            sendProposalBtn.addEventListener('click', () => {
                proposalModal.style.display = 'none';
                followUpModal.style.display = 'flex';
            });
            
            // --- Follow-up Modal Logic ---
            const scheduleBtn = document.getElementById('schedule-follow-up-btn');
            const calendarConfirmation = document.getElementById('calendar-confirmation');

            scheduleBtn.addEventListener('click', () => {
                calendarConfirmation.style.display = 'block';
                // In a real app, you'd trigger a calendar event here
            });
            
            // Close button for follow-up modal
            followUpModal.querySelectorAll('.modal-close-all, .modal-overlay').forEach(el => {
                el.addEventListener('click', () => {
                    followUpModal.style.display = 'none';
                });
            });

        });
    </script>
