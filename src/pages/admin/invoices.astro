---
import Layout from "../../layouts/Layout.astro";
import InvoiceGenerator from "../../components/admin/InvoiceGenerator";
import { MOCK_JOBS } from "../../lib/constants";

// For demo, we pass mock jobs. In real app, this would be fetched.
---

<Layout title="Invoicing - Royal Oak">
    <div class="min-h-screen bg-gray-50 pt-24 pb-12">
        <div class="max-w-7xl mx-auto px-4 md:px-12 mb-8 flex justify-end">
            <a
                href="/admin/dashboard"
                class="inline-flex items-center gap-2 text-sm font-semibold text-gray-600 hover:text-gray-900 bg-white px-3 py-1 rounded-lg border border-gray-200"
            >
                &larr; Back to Dashboard
            </a>
        </div>

        <main class="max-w-5xl mx-auto px-4">
            <div class="text-center mb-10">
                <h1 class="text-3xl font-extrabold text-gray-900">
                    Invoicing & Payments
                </h1>
                <p class="text-gray-500 mt-2">
                    Create, track, and send invoices instantly.
                </p>
            </div>

            <div
                class="bg-white rounded-2xl shadow-xl p-6 md:p-8 border border-gray-100"
            >
                <InvoiceGenerator client:load jobs={MOCK_JOBS} />
            </div>
        </main>
    </div>
</Layout>
