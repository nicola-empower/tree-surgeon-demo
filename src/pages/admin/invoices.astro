---
import Layout from '../../layouts/Layout.astro';
import InvoiceGenerator from '../../components/admin/InvoiceGenerator';
import { MOCK_JOBS } from '../../lib/constants';

// For demo, we pass mock jobs. In real app, this would be fetched.
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoicing - Royal Oak</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen font-sans">
    <a href="https://empowerdigitalsolutions.co.uk/trades" class="fixed top-4 left-4 z-[9999] bg-black/80 text-white px-3 py-1 rounded-full text-xs font-medium hover:bg-black transition-all border border-white/20 shadow-lg no-underline backdrop-blur-sm">&larr; Back to Trades</a>
    
    <div class="max-w-7xl mx-auto px-4 md:px-12 pt-6 flex justify-end">
        <a href="/admin/dashboard" class="inline-flex items-center gap-2 text-sm font-semibold text-gray-600 hover:text-gray-900 bg-white px-3 py-1 rounded-lg border border-gray-200">
            &larr; Back to Dashboard
        </a>
    </div>

    <main class="max-w-5xl mx-auto py-12 px-4">
        <div class="text-center mb-10">
            <h1 class="text-3xl font-extrabold text-gray-900">Invoicing & Payments</h1>
            <p class="text-gray-500 mt-2">Create, track, and send invoices instantly.</p>
        </div>

        <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8 border border-gray-100">
            <InvoiceGenerator client:load jobs={MOCK_JOBS} />
        </div>
    </main>
</body>
</html>
