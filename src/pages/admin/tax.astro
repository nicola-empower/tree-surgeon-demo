---
import TaxCalculator from '../../components/admin/TaxCalculator';
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tax Calculator - Royal Oak</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 min-h-screen font-sans text-gray-100">
     <a href="https://empowerdigitalsolutions.co.uk/trades" class="fixed top-4 left-4 z-[9999] bg-black/80 text-white px-3 py-1 rounded-full text-xs font-medium hover:bg-black transition-all border border-white/20 shadow-lg no-underline backdrop-blur-sm">&larr; Back to Trades</a>

    <div class="max-w-7xl mx-auto px-4 md:px-12 pt-6 flex justify-end">
        <a href="/admin/dashboard" class="inline-flex items-center gap-2 text-sm font-semibold text-gray-400 hover:text-white bg-gray-800 px-3 py-1 rounded-lg border border-gray-700">
            &larr; Back to Dashboard
        </a>
    </div>

    <main class="max-w-4xl mx-auto py-12 px-4">
        <div class="text-center mb-10">
            <h1 class="text-3xl font-extrabold text-white">Tax Estimator</h1>
            <p class="text-gray-400 mt-2">Project your earnings and tax liabilities.</p>
        </div>

        <div class="bg-gray-800 rounded-2xl shadow-2xl p-6 md:p-8 border border-gray-700">
            <TaxCalculator client:load />
        </div>
    </main>
</body>
</html>
