---
import Layout from "../../layouts/Layout.astro";
import QuoteCalculator from "../../components/QuoteCalculator.jsx";
---

<Layout title="Quote Command Dashboard">
    <div id="dashboard-content" class="min-h-screen bg-gray-50 hidden">
        <nav class="bg-white shadow-sm border-b border-gray-200">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <h1 class="text-2xl font-bold text-primary">
                            Quote Command
                        </h1>
                    </div>
                    <div class="flex items-center">
                        <button
                            id="logoutBtn"
                            class="text-sm font-medium text-gray-500 hover:text-gray-900 px-3 py-2 rounded-md hover:bg-gray-100 transition-colors"
                        >
                            Sign out
                        </button>
                    </div>
                </div>
            </div>
        </nav>

        <main class="max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
            <div class="mb-8">
                <h2 class="text-3xl font-bold text-gray-900">
                    Job Profit Estimator
                </h2>
                <p class="mt-1 text-sm text-gray-500">
                    Calculate, track, and manage your job quotes efficiently.
                </p>
            </div>

            <div class="mb-8 flex justify-end">
                <a href="/admin/quote-generator" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Open New Quote Generator &rarr;
                </a>
            </div>

            <QuoteCalculator client:load />
                    
            <!-- Admin Suite Tools -->
            <h2 class="text-xl font-bold text-gray-800 mb-6 mt-12">Business Tools</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
                <!-- Quote Gen (Existing Link Wrapper) -->
                
                <a href="/admin/quote-generator" class="group bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-all hover:-translate-y-1">
                    <div class="w-12 h-12 rounded-lg bg-indigo-50 flex items-center justify-center mb-4 group-hover:bg-indigo-100 transition-colors">
                        <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>
                    </div>
                    <h3 class="font-bold text-gray-900 mb-1">Quote Generator</h3>
                    <p class="text-sm text-gray-500">Create instant estimates.</p>
                </a>

                <a href="/admin/jobs" class="group bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-all hover:-translate-y-1">
                    <div class="w-12 h-12 rounded-lg bg-emerald-50 flex items-center justify-center mb-4 group-hover:bg-emerald-100 transition-colors">
                        <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path></svg>
                    </div>
                    <h3 class="font-bold text-gray-900 mb-1">Job Board</h3>
                    <p class="text-sm text-gray-500">Manage active jobs.</p>
                </a>

                <a href="/admin/invoices" class="group bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-all hover:-translate-y-1">
                    <div class="w-12 h-12 rounded-lg bg-rose-50 flex items-center justify-center mb-4 group-hover:bg-rose-100 transition-colors">
                         <svg class="w-6 h-6 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    </div>
                    <h3 class="font-bold text-gray-900 mb-1">Invoices</h3>
                    <p class="text-sm text-gray-500">Get paid faster.</p>
                </a>

                <a href="/admin/tax" class="group bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-all hover:-translate-y-1">
                    <div class="w-12 h-12 rounded-lg bg-orange-50 flex items-center justify-center mb-4 group-hover:bg-orange-100 transition-colors">
                        <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m-6 4h6m-6 4h6M6 6h12a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2z"></path></svg>
                    </div>
                    <h3 class="font-bold text-gray-900 mb-1">Tax Calc</h3>
                    <p class="text-sm text-gray-500">Estimate your liabilities.</p>
                </a>
            </div>
        </main>
    </div>
</Layout>

<script>
    const dashboardContent = document.getElementById("dashboard-content");
    const logoutBtn = document.getElementById("logoutBtn");

    // Auth Check
    if (localStorage.getItem("isAuthenticated") !== "true") {
        window.location.href = "/admin";
    } else {
        dashboardContent.classList.remove("hidden");
    }

    // Logout
    logoutBtn.addEventListener("click", () => {
        localStorage.removeItem("isAuthenticated");
        window.location.href = "/admin";
    });
</script>
