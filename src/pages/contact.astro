---
import Layout from "../layouts/Layout.astro";
import { Phone, Mail, MapPin, TreePine, AlertTriangle } from "lucide-react";
---

<Layout title="Contact | Royal Oak Arboriculture">
    <main class="bg-stone-50 min-h-screen">
        <div class="bg-green-900 py-16 sm:py-24">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl lg:mx-0">
                    <h1
                        class="text-4xl font-bold tracking-tight text-white sm:text-6xl font-serif"
                    >
                        Request Assessment
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-gray-300">
                        Book a site visit with a qualified arborist. We provide
                        fixed quotes and advice on TPOs.
                    </p>
                </div>
            </div>
        </div>

        <div
            class="mx-auto max-w-7xl px-6 lg:px-8 -mt-12 sm:-mt-24 relative z-10 pb-24"
        >
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Info Card -->
                <div
                    class="bg-green-800 text-white p-8 rounded-2xl shadow-xl h-fit"
                >
                    <h3 class="text-2xl font-bold font-serif mb-6">
                        Contact Details
                    </h3>
                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <Phone class="mt-1 h-6 w-6 text-green-400" />
                            <div>
                                <p class="font-bold">Call Us</p>
                                <a
                                    href="tel:08001234567"
                                    class="hover:text-green-300 transition-colors"
                                    >0800 123 4567</a
                                >
                                <p class="text-sm text-green-300 mt-1">
                                    24/7 Emergency Call Out Available
                                </p>
                            </div>
                        </div>
                        <div class="flex items-start gap-4">
                            <Mail class="mt-1 h-6 w-6 text-green-400" />
                            <div>
                                <p class="font-bold">Email</p>
                                <a
                                    href="mailto:info@royaloak.co.uk"
                                    class="hover:text-green-300 transition-colors"
                                    >info@royaloak.co.uk</a
                                >
                            </div>
                        </div>
                        <div class="flex items-start gap-4">
                            <MapPin class="mt-1 h-6 w-6 text-green-400" />
                            <div>
                                <p class="font-bold">Operating Area</p>
                                <p>Covering all London Boroughs and Surrey.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form -->
                <div
                    class="lg:col-span-2 bg-white rounded-2xl shadow-xl p-8 sm:p-12 border border-gray-200"
                >
                    <form class="space-y-8">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                            <div>
                                <label
                                    for="first-name"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >First name</label
                                >
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="first-name"
                                        id="first-name"
                                        autocomplete="given-name"
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>
                            <div>
                                <label
                                    for="last-name"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >Last name</label
                                >
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="last-name"
                                        id="last-name"
                                        autocomplete="family-name"
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>
                            <div class="sm:col-span-2">
                                <label
                                    for="email"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >Email address</label
                                >
                                <div class="mt-2">
                                    <input
                                        id="email"
                                        name="email"
                                        type="email"
                                        autocomplete="email"
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>

                            <!-- TPO Question -->
                            <div
                                class="sm:col-span-2 p-4 bg-yellow-50 rounded-lg border border-yellow-200"
                            >
                                <label
                                    class="text-sm font-medium leading-6 text-gray-900 mb-2 flex items-center gap-2"
                                >
                                    <AlertTriangle
                                        size={16}
                                        class="text-yellow-600"
                                    />
                                    Is the tree protected? (TPO / Conservation Area)
                                </label>
                                <div class="flex gap-6">
                                    <div class="flex items-center">
                                        <input
                                            id="tpo-yes"
                                            name="tpo"
                                            type="radio"
                                            class="h-4 w-4 border-gray-300 text-green-600 focus:ring-green-600"
                                        />
                                        <label
                                            for="tpo-yes"
                                            class="ml-3 block text-sm font-medium leading-6 text-gray-900"
                                            >Yes</label
                                        >
                                    </div>
                                    <div class="flex items-center">
                                        <input
                                            id="tpo-no"
                                            name="tpo"
                                            type="radio"
                                            class="h-4 w-4 border-gray-300 text-green-600 focus:ring-green-600"
                                        />
                                        <label
                                            for="tpo-no"
                                            class="ml-3 block text-sm font-medium leading-6 text-gray-900"
                                            >No</label
                                        >
                                    </div>
                                    <div class="flex items-center">
                                        <input
                                            id="tpo-unsure"
                                            name="tpo"
                                            type="radio"
                                            class="h-4 w-4 border-gray-300 text-green-600 focus:ring-green-600"
                                        />
                                        <label
                                            for="tpo-unsure"
                                            class="ml-3 block text-sm font-medium leading-6 text-gray-900"
                                            >Unsure (Please Check)</label
                                        >
                                    </div>
                                </div>
                            </div>

                            <div class="sm:col-span-2">
                                <label
                                    for="message"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >Description of Work</label
                                >
                                <div class="mt-2">
                                    <textarea
                                        id="message"
                                        name="message"
                                        rows="4"
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6"
                                        placeholder="e.g. Large Oak tree overhanging garage..."
                                    ></textarea>
                                </div>
                            </div>
                        </div>
                        <button
                            type="submit"
                            class="w-full rounded-md bg-green-700 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:bg-green-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600 transition-all"
                            >Submit Request</button
                        >
                    </form>
                </div>
            </div>
        </div>
    </main>
</Layout>
