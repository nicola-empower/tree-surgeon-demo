---
import "../styles/global.css";
import Header from "../components/Header.jsx";
import LocalSeoFooter from "../components/LocalSeoFooter.astro";
import StickyCTA from "../components/StickyCTA.jsx";

interface Props {
    title: string;
    description?: string;
    service?: string;
    city?: string;
    areas?: string[];
    postcodes?: string[];
    phone?: string;
}

const {
    title,
    description = "Arboricultural Specialists",
    service = "Tree Surgery",
    city = "Oxford",
    areas = ["Abingdon", "Witney", "Bicester", "Didcot", "Thame"],
    postcodes = ["OX1", "OX2", "OX3", "OX4", "OX5"],
    phone = "01865 900 123",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <!-- Fraunces (Nature) + Inter -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,400;700&family=Inter:wght@400;500;600&display=swap"
            rel="stylesheet"
        />
    </head>
    <body
        class="min-h-screen flex flex-col overflow-x-hidden font-body selection:bg-accent selection:text-white"
    >
    <a href="https://empowerdigitalsolutions.co.uk/trades" class="fixed top-4 left-4 z-[9999] bg-black/80 text-white px-3 py-1 rounded-full text-xs font-medium hover:bg-black transition-all border border-white/20 shadow-lg no-underline backdrop-blur-sm">&larr; Back</a>
        <slot />

        <footer class="bg-gray-900 text-white py-12 mt-auto">
            <div
                class="max-w-7xl mx-auto px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center gap-6"
            >
                <div class="text-sm text-gray-400">
                    &copy; {new Date().getFullYear()}
                    {title}. All rights reserved. <span class="mx-2 opacity-50">|</span> <a href="https://empowerdigitalsolutions.co.uk/trades" class="hover:text-white transition-colors">Back</a>
                </div>
                <div class="flex gap-6">
                    <a
                        href="/admin"
                        class="text-lg font-bold text-accent hover:text-white transition-colors flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><rect
                                width="18"
                                height="18"
                                x="3"
                                y="3"
                                rx="2"
                                ry="2"></rect><path d="M9 3v18"></path><path
                                d="m14 9 3 3-3 3"></path></svg
                        >
                        Admin Portal
                    </a>
                </div>
            </div>
        </footer>
    </body>
</html>

